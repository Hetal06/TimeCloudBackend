<div class="main-container" id="main-container">
	<div class="main-container-inner">
		<div class="page-content">
			<div class="row">				
					<div class="col-sm-3">
						<b> Quick Select </b>
						<div class="table-responsive employeetable">
							<table id="sample-table-2" class="table table-striped table-bordered table-hover quickSelectemp">
								<thead>
									<tr>	
										<th ng-click="sortByempNo()" > <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by Employee No" popover-popup-delay="{{delayTime}}"> No </label></th>
										<th class="empname" ng-click="sortByName()"> <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by First Name" popover-popup-delay="{{delayTime}}"> First Name </label> </th>
										<th ng-click="sortByLastName()">
											<label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by Last Name" popover-popup-delay="{{delayTime}}"> Last Name </label>
										</th>
									</tr>
								</thead>									
								<tbody data-ng-repeat="employee in employeeList">	
										<td>
											{{employee.employeeNo}}
										</td>						
										<td class="empname">
											<a id="employee" style="cursor:pointer"href="#/employeesProject/{{employee.employeeNo}}" >
													{{employee.firstName}}
											</a>
										</td>
										<td>{{employee.lastName}}</td>
								</tbody>
							</table>
						</div>											
					</div>
					<div class="col-sm-9" ng-show="projectDetails">
						<table id="sample-table-2" class="table table-striped table-bordered table-hover">
							<thead>
								<tr>	
									<th> <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by Employee No" popover-popup-delay="{{delayTime}}"> Project Name</label></th>
									<th> <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by First Name" popover-popup-delay="{{delayTime}}"> Client Name </label> </th>
									<th>  <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by Last Name" popover-popup-delay="{{delayTime}}">  Total Hours Spent </label>  </th>
								</tr>
							</thead>

							<tbody data-ng-repeat="project in projectDetails">
								<tr>
									<td>
										{{project.projectname}}
									</td>
									<td>
										{{project.clientname}}
									</td>
									<td style="padding: 0px;" ng-show="project.users">
										<table id="sample-table-2" class="table table-striped table-bordered table-hover col-xs-12" style="margin: 0px;">
											<thead>
												<tr>	
													<th class="col-xs-6"> <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by First Name" popover-popup-delay="{{delayTime}}"> Emp Name</label> </th>
													<th class="col-xs-6">  <label id="sort" popover-placement="top" popover-trigger="mouseenter" popover="Sort by Last Name" popover-popup-delay="{{delayTime}}">  Hours </label>  </th>
												</tr>
											</thead>
											<tbody data-ng-repeat="user in project.users">						 
												<tr>													
													<td class="col-xs-6" style="position: inherit;">
														{{user.firstName}}
													</td>
													<td class="col-xs-6" style="position: inherit;">
														{{user.timeTotal | filterHours}}
													</td>
												</tr>
											</tbody>
										</table>

										<!-- <div class="row" >
											<div class="col-lg-4" >
												
											</div>
											<div class="col-lg-4" >
												
											</div>
											<div class="col-lg-4" >
												
											</div>
											
										</div>
										 -->
									</td>
									<td style="padding:0px;" ng-hide="project.users">
										---
									</td>								
								</tr>
							</tbody> 
						</table>
					</div>
					<div class="col-sm-9" ng-hide="projectDetails">
						There is not any project assigned to this employee
					</div>
				</div>
			</div>
		</div>
	</div>
</div>