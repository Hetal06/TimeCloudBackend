		function setCookie() {
			var value = $('#emailTxt').val();
			var d = new Date();
			d.setTime(d.getTime() + (30 * 24 * 60 * 60 * 1000));
			var expires = "expires=" + d.toGMTString();
			document.cookie = 'emails' + "=" + value + "; " + expires;
		}
