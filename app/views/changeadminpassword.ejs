<div class="main-container container-fluid">
    <div class="col-xs-12">&nbsp;</div>
	<div class="col-xs-12">		
		<div class="login-container">
			<div class="row-fluid">
				<div id="forgot-box" class="forgot-box widget-box no-border">
					<div class="widget-body">
						<div class="widget-main">
							<h4 class="header red lighter bigger">
								<i class="icon-key"></i>
								Change Password
							</h4>
							<div class="space-6"></div>
							<p>
								Enter your new Password
							</p>

							<div ng-show = "message != null">
								<div id="errors" class="span3 alert alert-success">{{message}}</div>
							</div>
							<div class="row-fluid">
								<form method="POST" name="userFormPwd">
									<span class="form-group block input-icon input-icon-right">
										<input type="text" data-ng-model="newPwd" class="span12 form-control" placeholder="New Password" />
										<i class="icon-key"></i>
									</span>
									<div class="clearfix">
										<button class="width-35 center btn btn-small btn-danger" data-ng-click="changePwd()">
											Change
										</button>
									</div>
								</form>
							</div>
						</div><!-- /widget-main -->
					</div><!-- /widget-body -->
				</div><!-- /forgot-box -->
			</div>
		</div>
	</div>
</div>